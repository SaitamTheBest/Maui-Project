<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatiasDevezeApp.PageBeers"
             Title="BiÃ¨res">
    <VerticalStackLayout>
        <ListView x:Name="listView" ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Image}" HeightRequest="50" WidthRequest="50"/>
                            <Label Text="{Binding Name}" VerticalOptions="Center" Margin="5,0,0,0" />
                            <Label Text=" | " VerticalOptions="Center" Margin="5,5,0,0" />
                            <Label Text="{Binding Price}" VerticalOptions="Center" Margin="5,0,0,0" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>