             x:Class="MatiasDevezeApp.PageGif">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label 
            Text="Surprise !"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
        
        <Image 
            x:Name="ShrekGif"
            Source="shrek_run.gif"
