<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MatiasDevezeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MatiasDevezeApp"
    Shell.FlyoutBehavior="Disabled">


    <TabBar Shell.TabBarBackgroundColor="#0c420b" Shell.TabBarUnselectedColor="Black">
        <ShellContent Title="Accueil"
                      Icon="petit_biscuit.png"
                      ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Bières"
                      Icon="l_ane.png"
                      ContentTemplate="{DataTemplate local:PageBeers}"/>
        <ShellContent Title="Ajouter une bière"
                      Icon="chat_potte.png"
                      ContentTemplate="{DataTemplate local:AddBeerPage}"/>
        <ShellContent Title="Titre 4"
                      Icon="shrek_image.png"
                      ContentTemplate="{DataTemplate local:MainPage}"/>
    </TabBar>
</Shell>
